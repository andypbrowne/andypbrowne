---
layout: layouts/base.njk
---
<article>

<time class="postlist-date" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>

<h1>{{ title }}</h1>

<h2 class="post-deck text-gradient">{{description}}</h2>

