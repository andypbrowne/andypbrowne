	{%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
	<li><a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>{%- if not loop.last %}, {% endif %}</li>
	{%- endfor %}
</ul> #}

{{ content | safe }}

<div class="end-mark">üßê</div>

<h2>Related</h2>

<div class="featured-post-grid">

{%- if collections.posts %}
{%- set relatedPosts = collections.posts | getRelatedPosts(page.url, tags, 3) %}
{%- if relatedPosts.length > 0 %}
<ol class="postlist">
	{%- for post in relatedPosts %}
	{%- if not post.data.rss_only %}
		<li class="postlist-item">
			<a href="{{ post.url }}">
				<img class="thumbnail-nextprev" src="/{{ post.data.thumbnail }}" alt="{{ post.data.thumbnailAlt }}">
			</a>
			<a href="{{ post.url }}"><strong>{{ post.data.title }}</strong></a><br> <time class="" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
		</li>
	{% endif %}
	{%- endfor %}
</ol>
{%- else %}
<p>No related posts found.</p>
{%- endif %}
{%- endif %}
<div>More posts can be found in <a href="/blog/">the archive &rarr;</a>.</div>
</div>
</article>
