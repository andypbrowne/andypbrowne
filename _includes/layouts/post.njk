---
layout: layouts/base.njk
---

<article class="h-entry">
<div class="visually-hidden"><a tabindex="-1" class="u-url" href="https://andypbrowne.com/{{ page.url | url }}">{{ title }}</a></div>
<time class="postlist-date dt-published" datetime="{{ page.date | htmlDateString }}">published on {{ page.date | readableDate }} ‚Ä¢ <span class="meta__stats">about {{ content | readingTime }} reading time</span></time>

{% if number %}
<div class="post-number">Favorite thing ‚Ññ {{ number }}</div>
{% endif %}

<header class="post-header">
	{% if tags and 'featured' in tags %}
	<figure>
		<img src="../../{{ thumbnail }}" alt="{{ thumbnailAlt }}"/>
	</figure>
	{% endif %}

<div class="post-titles">
	<h1>{{ title }}</h1>
	<h2 class="post-deck text-gradient">{{description}}</h2>
</div>

</header>



