<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
	<li class="postlist-item {% if post.url == url %} postlist-item-active{% endif %}">
		{% if post.data.thumbnail %}
		<a href="{{ post.url }}">
			<picture>
				<source type="image/avif" srcset="{{ post.data.thumbnailavif }}">
				<img class="thumbnail" src="{{ post.data.thumbnail }}" alt="{{ post.data.thumbnailAlt }}" width="600" height="315">
			</picture>
		</a>
		{% endif %}
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time><br>
		<a href="{{ post.url }}" class="postlist-link">
			{% if post.data.title %}
			{{ post.data.title }}
			{% else %}
			<code>{{ post.url }}</code>
			{% endif %}</a>
		{% if post.data.description %}
			<p>{{ post.data.description }}</p>
		{% endif %}
	</li>
{% endfor %}
</ol>
