<ol reversed class="postlist">
{% for post in postslist | reverse %}
  {% if not post.data.rss_only %}
	<li class="postlist-item {% if post.url == url %} postlist-item-active{% endif %}">
		{% if 'featured' in post.data.tags or 'case study' in post.data.tags %}
		{% if post.data.thumbnail %}
		<a href="{{ post.url }}">
			{% image post.data.thumbnail, post.data.thumbnailAlt %}
		</a>
		{% endif %}
		{% endif %}
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time><br>
		<a href="{{ post.url }}" class="postlist-link">
			{% if post.data.title %}
			<h2>{{ post.data.title }}</h2>
			{% else %}
			<code>{{ post.url }}</code>
			{% endif %}</a>
		{% if post.data.description %}
			<p>{{ post.data.description }}</p>
		{% endif %}
	</li>
	{% endif %}
{% endfor %}
</ol>